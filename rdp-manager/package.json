{
  "name": "rdp-manager",
  "version": "1.0.13",
  "description": "RDP Connection Manager",
  "author": "T3rr0or",
  "publisher": "T3rr0or",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --publish always"
  },
  "build": {
    "appId": "com.t3rr0or.rdpmanager",
    "productName": "RDP Manager",
    "copyright": "Copyright Â© 2024 T3rr0or",
    "asar": {
      "smartUnpack": true,
      "compress": true
    },
    "forceCodeSigning": false,
    "publish": [
      {
        "provider": "github",
        "owner": "T3rr0or",
        "repo": "RDP-Manager"
      }
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__,tests,powered-test,example,examples,*.d.ts}",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/node_modules/*/{build,dist,doc,docs}",
      "!**/node_modules/*/*.{map,md,markdown,txt,ts,swp}",
      "!**/node_modules/*/{.npmignore,.gitignore,.travis.yml,.github}"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "compression": "maximum"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "../LICENSE",
      "artifactName": "RDP-Manager-Setup-${version}.${ext}"
    }
  },
  "dependencies": {
    "electron-log": "^5.0.1",
    "electron-store": "^8.0.1",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
