{
  "name": "rdp-manager",
  "version": "1.0.7",
  "description": "RDP Connection Manager",
  "author": "T3rr0or",
  "publisher": "T3rr0or",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.t3rr0or.rdpmanager",
    "productName": "RDP Manager",
    "copyright": "Copyright Â© 2024 T3rr0or",
    "publish": [
      {
        "provider": "github",
        "owner": "T3rr0or",
        "repo": "RDP-Manager"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "publisherName": "T3rr0or",
      "requestedExecutionLevel": "asInvoker",
      "rfc3161TimeStampServer": "http://timestamp.digicert.com"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "../LICENSE",
      "artifactName": "RDP-Manager-Setup-${version}.${ext}"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/electron-store/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/electron-store/",
        "to": "node_modules/electron-store/",
        "filter": ["**/*"]
      }
    ]
  },
  "dependencies": {
    "electron-log": "^5.0.1",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
