{
  "name": "rdp-manager",
  "version": "1.0.4",
  "description": "RDP Connection Manager",
  "author": "T3rr0or",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.t3rr0or.rdpmanager",
    "publish": [{
      "provider": "github",
      "owner": "T3rr0or",
      "repo": "RDP-Manager"
    }],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "certificateFile": "build/certificate.pfx",
      "certificatePassword": "",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ]
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
} 